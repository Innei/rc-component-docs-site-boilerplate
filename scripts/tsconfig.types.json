{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2017",
    "module": "ES2020",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./types",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "moduleResolution": "Node",
    "declarationMap": false,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "dist",
    "types",
    "node_modules",
  ]
}